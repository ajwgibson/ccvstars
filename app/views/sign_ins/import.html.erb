

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">

        <div class="ibox-title">
          <h2>Import sign in records</h2>
        </div>

        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-4">

              <%= render partial: "layouts/errors", object: @file_upload, as: 'form' %>

              <%= form_for :file_upload, :html => { :class => "upload" } do |f| %>

                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <div class="form-control" data-trigger="fileinput">
                      <i class="glyphicon glyphicon-file fileinput-exists"></i>
                      <span class="fileinput-filename"></span>
                    </div>
                    <span class="input-group-addon btn btn-default btn-file">
                        <span class="fileinput-new">Select file</span>
                        <span class="fileinput-exists">Change</span>
                        <%= f.file_field :filename, accept: 'text/csv' %>
                    </span>
                    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>

                <div class="form-group" style="margin-top: 20px;">

                  <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                    <i class="fa fa-check"></i> Import
                  <% end %>

                  <%= link_to sign_ins_path, :class => 'btn btn-default' do %>
                    <i class="fa fa-times"></i> Cancel
                  <% end %>

                </div>

              <% end %>

            </div>
          </div>
        </div>

        <div class="ibox-footer">
          <p>
            Please note that this import will only work with a comma separated data
            file that has been taken from the desktop sign in tool; please
            do not attempt to import records from an unknown source.
          </p>
          <p>
            You should also
            be aware that a large input file may take some time to import, so please
            be patient.
          </p>
        </div>

      </div>
    </div>
  </div>
</div>
