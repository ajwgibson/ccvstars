
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-9">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>Sign in details</h3>
        </div>
        <div class="ibox-content">
          <dl class="dl-horizontal">
            <dt>Child</dt>
            <dd><%= @sign_in.name %></dd>
            <dt>Room</dt>
            <dd><%= @sign_in.room %></dd>
            <dt>Date and time</dt>
            <dd><%= l(@sign_in.sign_in_time, :format => :short) %> <%= late_icon @sign_in.late? %></dd>
            <dt>Label</dt>
            <dd><%= @sign_in.label %></dd>
            <dt>Newcomer?</dt>
            <dd><%= t(@sign_in.newcomer.class) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>Actions</h3>
        </div>
        <div class="ibox-content">
          <div>
            <%= link_to edit_sign_in_path, :class => 'btn btn-primary' do %>
              <i class="fa fa-edit"></i> Edit details
            <% end %>
          </div>
          <div>
            <a class="btn btn-danger" data-toggle='modal' data-target='#delete'><i class="fa fa-times"></i> Delete this record</a>
          </div>
            <%= link_to sign_ins_path, :class => 'btn btn-default' do %>
              <i class="fa fa-reply"></i> Back to list
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal inmodal" id="delete" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content animated flipInY">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
        <i class="fa fa-bomb modal-icon"></i>
        <h4 class="modal-title">Warning</h4>
        <small class="font-bold">You are about to delete a sign in record!</small>
      </div>
      <div class="modal-body">
        <p>
          If you continue with this action you will delete this record. While this action
          <strong><em>can be reversed</em></strong>, you should probably still think carefully before continuing.
        </p>
      </div>
      <div class="modal-footer">
        <%= form_for @sign_in, method: :delete, :html => { :class => "sign_in" } do |f| %>
        <button type="button" class="btn btn-white" data-dismiss="modal">Cancel (don't delete)</button>
        <button type="submit" class="btn btn-danger">Continue (delete)</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
