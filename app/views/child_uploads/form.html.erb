

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">

        <div class="ibox-title">
          <h2><%= @heading %></h2>
        </div>

        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-4">

              <%= render partial: "layouts/errors", object: @upload, as: 'form' %>

              <%= form_for @upload, :html => { :class => "upload" } do |f| %>

                <div class="form-group <%= "has-error" if @upload.errors[:filename].present? %>">
                  <%= f.label :filename, 'Upload file', :class => 'control-label' %>
                  <%= f.file_field :filename %>      
                </div>

                <div class="form-group" style="margin-top: 20px;">
                  
                  <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                    <i class="fa fa-check"></i> Save
                  <% end %>
                  
                  <%= link_to child_uploads_path, :class => 'btn btn-default' do %>
                    <i class="fa fa-times"></i> Cancel
                  <% end %>

                </div>

              <% end %>

            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
