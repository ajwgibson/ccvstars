
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">

      <div class="ibox float-e-margins">

        <div class="ibox-title">
          <h5>Child uploads</h5>
          <div class="ibox-tools">
            <a class="btn btn-<%= @filter.except(:order_by).empty? ? "default" : "warning btn-outline" %> btn-sm"
               data-toggle="collapse" data-target="#filter"><i class="fa fa-filter"></i></a>
          </div>
        </div>

        <div class="ibox-content" style="display: block;">

          <div id="filter" class="filter collapse">
          </div>

          <%= link_to new_child_upload_path, :class => 'btn btn-default btn-sm' do %>
            <i class="fa fa-plus"></i> Add an upload
          <% end %>

          <table class="table table-striped">
            
            <thead>
              <tr>
                <th>ID</th>
                <th>Started</th>
                <th>Finished</th>
                <th>Status</th>
                <th>Filename </th>
                <th>Links </th>
              </tr>
            </thead>

            <tbody>
              <% @uploads.each do |upload| %>
              <tr>
                <td><%= upload.id %> </td>
                <td><%= upload.started_at %> </td>
                <td><%= upload.finished_at %> </td>
                <td><%= upload.status %> </td>
                <td><%= upload.filename %> </td>
                <td>
                  <%= link_to child_upload_path(upload), :class => '' do %> 
                  <i class="fa fa-info-circle"></i> View details
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>

            <tfoot>
              <tr>
                <td colspan="6">
                  <div class="pull-right">
                    <%= paginate @uploads %>
                  </div>
                </td>
              </tr>
            </tfoot>

          </table>

        </div>
      </div>
    </div>
  </div>
</div>
