
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-9">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>Child upload details</h3>
        </div>
        <div class="ibox-content">
          <dl class="dl-horizontal">
            <dt>Status</dt>             
            <dd><%= @upload.status %></dd>
            <dt>Filename</dt>         
            <dd><%= @upload.filename %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>Actions</h3>
        </div>
        <div class="ibox-content">
          <div>
            <a class="btn btn-danger" data-toggle='modal' data-target='#delete'><i class="fa fa-times"></i> Delete this record</a>
          </div>
          <%= link_to child_uploads_path, :class => 'btn btn-default' do %>
            <i class="fa fa-reply"></i> Back to uploads
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal inmodal" id="delete" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content animated flipInY">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
        <i class="fa fa-bomb modal-icon"></i>
        <h4 class="modal-title">Warning</h4>
        <small class="font-bold">You are about to delete an upload record!</small>
      </div>
      <div class="modal-body">
        <p>
          If you continue with this action you will delete this record. This action 
          <strong><em>cannot be reversed</em></strong>, but the changes made by the upload will not
          be lost - only the record of the upload will be removed.
        </p>
      </div>
      <div class="modal-footer">
        <%= form_for @upload, method: :delete, :html => { :class => "child" } do |f| %>
        <button type="button" class="btn btn-white" data-dismiss="modal">Cancel (don't delete)</button>
        <button type="submit" class="btn btn-danger">Continue (delete)</button>
        <% end %>
      </div>
    </div>
  </div>
</div>


